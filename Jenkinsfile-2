pipeline {
  agent {
    docker { image 'liquibase/liquibase:4.4.2' }
  }
  environment {
    MARIADB_CREDS=credentials('mariadb-credentials')
  }
  stages {
    stage('Status') {
      steps {
        sh 'liquibase status --url="jdbc:derby://localhost:1527/sample" --changeLogFile=master-changelog.xml --username=liquibase --password=liquibase
      }
    }
    stage('Update') {
      steps {
        sh 'liquibase update --url="jdbc:derby://localhost:1527/sample" --changeLogFile=master-changelog.xml --username=liquibase --password=liquibase      }
    }
  }
  post {
    always {
      cleanWs()
    }
  }
}
